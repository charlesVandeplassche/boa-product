{% extends "@BoaAdmin/layout.html.twig" %}

{% block body %}
    <div class="mb-3">
        <a href="{{ path('admin_productlist') }}" class="btn btn-light"><span class="icon-angle-left mr-3"></span> Terug naar overzicht</a>
    </div>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <h3>Naam</h3>
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-6 mt-3 mt-md-0">
            <h3>Slug</h3>
            {{ form_widget(form.slug) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3>Omschrijving</h3>
            {{ form_widget(form.description) }}
        </div>
    </div>

    {{ form_widget(form) }}

    {{ form_end(form) }}
{% endblock %}