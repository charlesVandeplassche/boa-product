<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="App\Boa\ProductBundle\Entity\Product">

        <field name="name" column="name" type="string" length="255" />

        <field name="description" column="description" type="text"/>

        <field name="slug" column="slug" type="string" length="255" />

        <field name="price" column="price" type="float" />

        <field name="discount" column="discount" type="float" />

        <field name="sort" column="sort" type="string" nullable="true" />

        <field name="created" column="created" type="datetime" />

        <field name="updated" column="updated" type="datetime" />

    </mapped-superclass>

</doctrine-mapping>
